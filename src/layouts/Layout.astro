---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/png"
      href={`${import.meta.env.BASE_URL}favicon-16x16.png`}
    />
    <meta name="robots" content="index,follow" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={Astro.url.toString()} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="container">
      <style>
        .container {
          min-height: 100vh;
          max-width: 100vw;
          display: flex;
          flex-direction: column;
          align-items: center;
          overflow-x: hidden;
        }

        .content {
          display: flex;
          flex-direction: column;
          align-items: center;
          flex: 1;
          height: 100%;
          width: 700px;
          margin: 0 auto;
          padding: 4rem 1rem 1rem 1rem;
        }

        .nav-wrapper {
          position: fixed;
          top: 0;
          width: 700px;
          background-color: #fafafa;
          margin: 0 auto;
          z-index: 2;
        }

        .navigation {
          display: flex;
          max-width: 700px;
          padding: 1rem;
        }

        .navigation a {
          padding: 0 0.7rem;
          color: #333;
          text-decoration: none;
          text-align: center;
          text-transform: lowercase;
          opacity: 0.7;
          transition: opacity 0.15s ease-in;
          margin: 0 1rem;
        }

        .navigation a:hover {
          opacity: 1;
        }

        .nav-right {
          margin-left: auto;
          margin-right: 1rem;
        }

        .nav-right a {
          margin-left: 1rem;
        }

        .footer {
          opacity: 0.7;
          margin-bottom: 2rem;
          font-size: small;
        }

        .footer-content {
          width: 700px;
          margin: 0 auto;
          font-size: 90%;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .footer-content a {
          padding: 0.7rem 1.4rem;
          color: #333;
          text-decoration: none;
          text-align: center;
          text-transform: lowercase;
          margin: 0 1rem;
        }

        @media (max-width: 700px) {
          .nav-wrapper {
            width: 100vw;
          }
          .navigation {
            width: 100%;
            box-sizing: border-box;
            justify-content: space-around;
          }

          .nav-right {
            display: none;
          }

          .content {
            width: 100vw;
            box-sizing: border-box;
            padding: 3rem 0.5rem 0.5rem 0.5rem;
          }

          .footer-content {
            width: 100vw;
            box-sizing: border-box;
            flex-wrap: wrap;
          }

          .footer-content div {
            width: 100%;
            text-align: center;
          }
        }
      </style>
      <div class="nav-wrapper">
        <nav class="navigation">
          <a href={`${import.meta.env.BASE_URL}`}> Home</a>
          <a href={`${import.meta.env.BASE_URL}posts/`}> Blog</a>
          <a href={`${import.meta.env.BASE_URL}CV/`}> CV</a>
          <div class="nav-right">
            <a
              href="https://github.com/christiankozalla"
              rel="noopener noreferrer"
              target="_blank"
              aria-label="Link to Christians GitHub Profile"
            >
              gh
            </a>
            <a
              href="https://twitter.com/CKozalla"
              rel="noopener noreferrer"
              target="_blank"
              aria-label="Link to Christians Twitter Account"
            >
              tw
            </a>
            <a
              href="mailto:devdiary.blog@gmail.com"
              aria-label="Christians E-Mail Address"
            >
              co
            </a>
          </div>
        </nav>
      </div>
      <div class="content">
        <slot />
      </div>
      <div class="footer">
        <div class="footer-content">
          <div>{new Date().getUTCFullYear()} Christian Kozalla</div>
          <a
            href="https://github.com/christiankozalla"
            rel="noopener noreferrer"
            target="_blank"
            aria-label="Link to Christians GitHub Profile"
          >
            gh
          </a>
          <a
            href="https://twitter.com/CKozalla"
            rel="noopener noreferrer"
            target="_blank"
            aria-label="Link to Christians Twitter Account"
          >
            tw
          </a>
          <a
            href="mailto:devdiary.blog@gmail.com"
            aria-label="Christians E-Mail Address"
          >
            co
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
